<article class="post">
  <% if (is_post()) { %>
  <div class="post-title"><%= page.title %></div>
  <div class="post-meta">
    <div class="date"><%- date(page.date, "YYYY MMMM Do") %></div>
    <div class="tags">
      <% page.tags.map(tag => tag.name).forEach(function (tag) { %>
      <a class="tag-item" href="/tags/<%- tag %>" style="color: #d1d5da;"><%- tag %></a>
      <% }) %>
    </div>
  </div>
  <% } %>

  <main class="post-content"><%- page.content %></main>

  <% if(theme.gitalk.enable){ %>
    <%- partial('_partial/gitalk') %>
    <% } %>
</article>

<%- js('js/highlight.js') %>